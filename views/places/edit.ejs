<%- include('../partials/header') %>

<div class="form-container">
    <h1>Edit Place</h1>
    <p class="form-subtitle">Trip: <%= trip.name %></p>
    
    <form action="/places/<%= place.id %>?_method=PUT" method="POST" class="form">
        <div class="form-group">
            <label for="name">Place Name *</label>
            <input type="text" id="name" name="name" value="<%= place.name %>" required class="form-control">
        </div>
        
        <div class="form-group">
            <label for="address">Address *</label>
            <input type="text" id="address" name="address" value="<%= place.address %>" required class="form-control">
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4" class="form-control"><%= place.description %></textarea>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/trips/<%= trip.id %>" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>